# --- ① 永続ボリューム請求 ----------------------------------------------------
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: db-pvc
  namespace: web
spec:
  accessModes:
    - ReadWriteOnce          # 1 ノードから R/W
  resources:
    requests:
      storage: 5Gi           # 必要なら増やす
  storageClassName: standard
---
# --- ② MariaDB（Cloudsuite web-serving db_server）----------------------------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: db
  namespace: web
spec:
  strategy:
    type: Recreate           # Pod は常に 1 つ、更新時は落として作り直す
  replicas: 1
  selector:
    matchLabels:
      app: db
  template:
    metadata:
      labels:
        app: db
    spec:
      volumes:
        - name: db-data
          persistentVolumeClaim:
            claimName: db-pvc

      ### 0️⃣ 所有権を mysql(999) に矯正 – これで再ダウンロードを防止
      initContainers:
        - name: fix-perms
          image: busybox:stable
          command: ["sh", "-c", "chown -R 999:999 /var/lib/mysql /backup || true"]
          volumeMounts:
            - name: db-data
              mountPath: /var/lib/mysql

      containers:
        - name: mariadb
          image: cloudsuite/web-serving:db_server
          securityContext:
            privileged: true
          ports:
            - containerPort: 3306
          resources:
            requests:
              cpu: "1"
              memory: 1Gi
            limits:
              cpu: "2"
              memory: 2Gi
          volumeMounts:
            - name: db-data
              mountPath: /var/lib/mysql     # /root/mysql.sh はここを検査
          startupProbe:
            exec:
              command: ["mysqladmin", "ping", "-h", "127.0.0.1"]
            failureThreshold: 90            # ≒15 分 (90×10 s)
            periodSeconds: 10
          readinessProbe:
            exec:
              command: ["mysqladmin", "ping", "-h", "127.0.0.1"]
            periodSeconds: 10
---
# --- ③ ClusterIP Service -----------------------------------------------------
apiVersion: v1
kind: Service
metadata:
  name: db
  namespace: web
spec:
  selector:
    app: db
  ports:
    - port: 3306
      targetPort: 3306
